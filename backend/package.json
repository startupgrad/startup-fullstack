{
  "name": "@ideanick/backend",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "dev": "ts-node-dev --watch src/emails/dist --rs --exit-child src/index.ts",
    "build-emails": "rimraf ./src/emails/dist && mkdir ./src/emails/dist && mjml ./src/emails/[!_]*.mjml -o ./src/emails/dist",
    "watch-emails": "mjml -w ./src/emails/[!_]*.mjml -o ./src/emails/dist",
    "copy-emails": "copyfiles ./src/emails/dist/*.html ./dist/backend",
    "build-ts": "rimraf ./dist && tsc --build tsconfig.json",
    "build": "pnpm build-ts && pnpm build-emails && pnpm copy-emails",
    "start": "node dist/backend/src/index.js",
    "pgc": "prisma generate",
    "pmd": "prisma migrate dev",
    "types": "tsc --noEmit --project ./tsconfig.json",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/.eslintcache .",
    "prettify": "prettier --loglevel warn --cache --write '{src/**/*,*}.{ts,tsx,js,json,yml,scss}' '!**/{node_modules,dist}/**/*'",
    "prepare": "pnpm pgc && ts-patch install -s"
  },
  "dependencies": {
    "@ideanick/shared": "workspace:*",
    "@ideanick/webapp": "workspace:*",
    "@prisma/client": "^4.8.0",
    "@sentry/node": "^7.35.0",
    "@trpc/server": "^10.7.0",
    "cors": "^2.8.5",
    "cron": "^2.2.0",
    "debug": "^4.3.4",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "fast-glob": "^3.2.12",
    "form-data": "^4.0.0",
    "handlebars": "^4.7.7",
    "jsonwebtoken": "^9.0.0",
    "lodash": "^4.17.21",
    "mailgun.js": "^8.0.6",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "picocolors": "^1.0.0",
    "serialize-error": "^8.1.0",
    "triple-beam": "^1.3.0",
    "winston": "^3.8.2",
    "yaml": "^2.2.1",
    "zod": "^3.20.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/cron": "^2.0.0",
    "@types/debug": "^4.1.7",
    "@types/express": "^4.17.15",
    "@types/jsonwebtoken": "^9.0.0",
    "@types/lodash": "^4.14.191",
    "@types/passport": "^1.0.11",
    "@types/passport-jwt": "^3.0.8",
    "@types/triple-beam": "^1.3.2",
    "mjml": "^4.13.0",
    "prisma": "^4.8.0"
  }
}
